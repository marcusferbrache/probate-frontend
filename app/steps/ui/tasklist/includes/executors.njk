{% set previousTaskStatus = fields.previousTaskStatus.value.ExecutorsTask %}

<li class="task-item">
    {{ taskHeader(
        number = taskNumber + ".",
        content = content,
        title = content.executorsTask | safe,
        status = fields.ExecutorsTask.value.status,
        previousTaskStatus = previousTaskStatus
    ) }}
    <div class="task-list-items">
        {{ taskAction(
            prevTaskStatus = previousTaskStatus,
            status = fields.ExecutorsTask.value.status,
            nextURL = fields.ExecutorsTask.value.nextURL,
            checkYourAnswersURL = fields.ExecutorsTask.value.checkYourAnswersLink,
            content = content,
            title = content.executorsTask | safe,
            alreadyDeclared = fields.alreadyDeclared.value
        ) }}
    </div>
</li>
