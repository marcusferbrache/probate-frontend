{% set previousTaskStatus = fields.previousTaskStatus.value.DocumentsTask %}

<li class="task-item">
    {{ taskHeader(
        number = taskNumber + ".",
        content = content,
        title = content.documentTask | safe,
        status = fields.DocumentsTask.value.status,
        previousTaskStatus = previousTaskStatus
    ) }}
    <div class="task-list-items">
        {{ taskAction(
            prevTaskStatus = previousTaskStatus,
            status = fields.DocumentsTask.value.status,
            nextURL = fields.DocumentsTask.value.nextURL,
            checkYourAnswersURL = fields.DocumentsTask.value.checkYourAnswersLink,
            content = content,
            title = content.documentTask | safe
        ) }}
    </div>
</li>
